<% if (typeof message !== 'undefined') { %>
<div class="alert">
  <p class="message"><%= message %></p>
</div>
<% } %>
<div class="container">
  <h1 class="title">Product details</h1>
  <p class="description">Here you can see the details of this product</p>
</div>
<div class="container">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= product.name %></h5>
      <h6 class="card-subtitle">$<%= product.price %></h6>
      <p class="card-text"><%= product.description %></p>
      <div class="action">
        <a href="/products/update/<%= product.slug %>" class="btn btn-primary"
          >Edit this product</a
        >
        <form action="/products/delete/<%= product.slug %>" method="POST">
          <button type="submit" class="btn btn-danger">
            Delete this product
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
