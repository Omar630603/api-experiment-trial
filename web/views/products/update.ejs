<% if (typeof message !== 'undefined') { %>
<div class="alert">
  <p class="message"><%= message %></p>
</div>
<% } %>
<div class="container">
  <h1 class="title">Update this product</h1>
  <p class="description">Fill the form below to update this product</p>
</div>
<div class="container">
  <form action="/products/update/<%= product.slug %>" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        type="text"
        name="name"
        id="name"
        class="form-control"
        value="<%= product.name %>"
      />
    </div>
    <div class="form-group">
      <label for="price">Price</label>
      <input
        type="number"
        name="price"
        id="price"
        class="form-control"
        value="<%= product.price %>"
      />
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea
        name="description"
        id="description"
        class="form-control"
        rows="5"
      >
<%= product.description %></textarea
      >
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>
